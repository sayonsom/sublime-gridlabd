%YAML 1.2
---
# See http://www.sublimetext.com/docs/3/syntax.html
file_extensions:
  - glm
scope: source.gridlabd
contexts:
  main:
    # Strings begin and end with quotes, and use backslashes as an escape
    # character
    - match: '"'
      scope: punctuation.definition.string.begin.gridlabd
      push: double_quoted_string

    # Comments begin with a '//' and finish at the end of the line
    - match: '//'
      scope: punctuation.definition.comment.gridlabd
      push: line_comment

    # Keywords are if, else for and while.
    # Note that blackslashes don't need to be escaped within single quoted
    # strings in YAML. When using single quoted strings, only single quotes
    # need to be escaped: this is done by using two single quotes next to each
    # other.
    - match: '\b(object|module|#include|#set|#define|clock|variables|comments)\b'
      scope: keyword.control.gridlabd

    # Special Words
    - match: '\b(node|overhead_line|underground_line|substation|meter|regulator|capacitor|switch)\b'
      scope: variable.language.cs

    # Configuration classes

    # Properties
    - match: '\b(timezone|starttime|stoptime|timestamp|solver_method|nominal_voltage|default_maximum_voltage_error|name|phases|voltage_A|voltage_B|voltage_C|voltage_AB|voltage_BC|voltage_CA|current_A|current_B|current_C|power_A|power_B|power_C|shunt_A|shunt_B|shunt_C|bustype|maximum_voltage_error|busflags|reference_bus|mean_repair_time|from|to|power_in|power_out|power_losses|power_in_A|power_in_B|power_in_C|power_out_A|power_out_B|power_out_C|power_losses_A|power_losses_B|power_losses_C|status|current_out_A|current_out_B|current_out_C|current_in_A|current_in_B|current_in_C|flow_direction|mean_repair_time|length|configuration|conductor_A|conductor_B|conductor_C|conductor_N|spacing|z11|z12|z13|z21|z22|z23|z31|z32|z33|distance_AB|distance_BC|distance_AC|distance_AN|distance_BN|distance_CN|distance_AE|distance_BE|distance_CE|distance_NE|geometric_mean_radius|resistance|diameter|rating.summer.continuous|rating.summer.emergency|rating.winter.continuous|rating.winter.emergency|outer_diameter|conductor_gmr|conductor_diameter|conductor_resistance|neutral_gmr|neutral_diameter|neutral_resistance|neutral_strands|insultation_relative_permitivitty|shield_gmr|shield_resistance|rating.summer.continuous|rating.summer.emergency|rating.winter.continuous|rating.winter.emergency|conductor_1|conductor_2|conductor_N|insulation_thickness|diameter|spacing|resistance|geometric_mean_radius|aging_constant|aging_granularity|ambient_temperature|climate|configuration|percent_loss_of_life|top_oil_hot_spot_temperature|use_thermal_model|winding_hot_spot_temperature|connect_type|install_type|primary_voltage|secondary_voltage|power_rating|powerA_rating|powerB_rating|powerC_rating|resistance|reactance|impedance|shunt_impedance|impedance1|impedance2|full_load_loss|no_load_loss|reactance_resistance_ratio|tank_fittings_weight|oil_volume|core_coil_weight|rated_winding_hot_spot_rise|rated_top_oil_rise|rated_winding_time_constant|installed_insulation_life|coolant_type|cooling_type|load_class|measured_voltage